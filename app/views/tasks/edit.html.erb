<h2>Edit a Task</h2>


<%= form_for @task, method: :patch do |f| %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :assignee %>
<%= f.text_field :assignee %>
<%= f.label :completed %>
<%= f.text_field :completed %>
<%= f.label :duration %>
<%= f.text_field :duration %>
<%= f.submit %>
<% end %>


<%= link_to "Home", tasks_path %>
<%= link_to "New Task", new_task_path %>
