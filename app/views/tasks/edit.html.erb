<h1>Edit <%= @task.name %></h1>

<%= form_for @task, method: :put do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :deadline %>
  <%= f.date_field :deadline %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit "Add Task" %>
<% end %>

<p>
  <%= link_to "Back to " + @task.name, task_path(@task.id) %>
</p>
