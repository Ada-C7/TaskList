<%= form_for @task do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>

<% end %>

<%= button_to("Delete Task", task_delete_path, method: :delete, data: {confirm: "Are you sure you want to delete this task?"}) %>

