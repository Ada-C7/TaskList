<h1>Edit a Task!</h1>

<%= form_for @task, method: :put do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name %>

  <%= f.label :description %>:
  <%= f.text_area :description, size: "30x5" %>

  <%= f.label :due_date %>:
  <%= f.date_field :due_date %>

  <%= f.submit "Edit Task" %>

<% end %>
