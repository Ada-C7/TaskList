<h1>Edit <%= @task.name %></h1>

<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :deadline %>
  <%= f.date_field :deadline %>

  <%= f.submit "Edit Task" %>
<% end %>

<p>
  <%= link_to "Back to " + @task.name, task_path(@task.id) %>
</p>
