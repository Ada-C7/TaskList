<h2>Edit a task</h2>

<%= form_for @task, method: :put do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description, size: "60x12" %>

<%= f.label :complete, "completed?" %>
<%= f.check_box :complete %>

<!-- <%= f.label :completion_date, "Date Complete:" %>
<%= f.date_field :completion_date %> -->

<%= f.submit "update task" %>

<% end %>
