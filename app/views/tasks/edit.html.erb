<h1>Editing <%= @task.title %></h1>

<%= form_for(@task) do |f| %>
  <ul>
    <li>
      <%= f.label :title %>:
      <%= f.text_field :title %>
    </li>

    <li>
      <%= f.label :description %>:
      <%= f.text_field :description %>
    </li>

    <li>
      <%= f.label :duedate %>:
      <%= f.text_field :duedate %>
    </li>

    <li>
      <%= f.label :priority %>:
      <%= f.text_field :priority %>
    </li>

    <li>
      <%= f.submit %>
    </li>
  </ul>

<% end %>
