<h1>Edit a Task</h1>

<%= form_for @task, method: :put  do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "50x12" %>

  <%= f.label :completion_date %>
  <%= f.date_field :completion_date %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit "Edit a Task" %>
<% end %>
