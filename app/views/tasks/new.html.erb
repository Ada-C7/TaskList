
<head>
  <title> TaskMaster </title>
    <link rel="stylesheet"type="text/css"href="https://fonts.googleapis.com/css?family=Muli|Raleway">
    <meta charset="UTF-8">
</head>
<body>

<header class="New">
<h1>Add New Task</h1>
</header>

<%= form_for @task do |f| %>

<%= f.label :title, class: "title" %>
<%= f.text_field :title %>

<%= f.label :day %>
<%= f.text_field :day %>

<%= f.label :priority %>
<%= f.text_field :priority %>

<%= f.label :description %>
<%= f.text_area :description, size: "60x12" %>

<%= f.submit "Create" %>

<% end %>

<%= button_to "Home", tasks_path, method: :get %>
