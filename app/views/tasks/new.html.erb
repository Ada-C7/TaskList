<h1>Add New Task</h1>

<ul>

<%= form_for @task do |f| %>
  <li>

    <%= f.label :name %>:
    <%= f.text_field :name %>
  </li>
  <li>
    <%= f.label :description %>:
    <%= f.text_area :description, size: "30" %>
  </li>
  <li>
    <%= f.label :due_date %>:
    <%= f.date_field :due_date %>
  </li>
  <li>
    <%= f.label :completion_date %>:
    <%= f.date_field :completion_date %>
  </li>
  <li>
    <%= f.submit "Create" %>
  </li>
<% end %>

</ul>

<p>
  <%= link_to "Back to Task List", tasks_path %>
</p>
