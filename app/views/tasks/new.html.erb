<h1>Add A New Task</h1>

<form action="/tasks" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">


  <label for="title">Title</label>
  <input type="text" name="title" value="" id="title">

  <label for="description">Description</label>
  <input type="textarea" name="description" value="" id="description">

  <label for="duedate">Due Date</label>
  <input type="text" name="duedate" value="" id="duedate">

  <label for="priority">Priority</label>
  <input type="text" name="priority" value="" id="priority">

  <input type="submit" value="Submit">
</form>

<h2><%= link_to "cancel", tasks_path %></h2>
