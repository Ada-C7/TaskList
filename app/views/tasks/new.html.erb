<h2>Add New Task</h2>

<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "name that task" %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "60x12" %>

  <%= f.label :deadline %>
  <%= f.date_field :deadline %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit "Add Task" %>
<% end %>

<p><%= link_to "Back to tasks", tasks_path %></p>
