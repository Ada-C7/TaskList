<h1>Add New Task</h1>

<%= form_for @task do |f| %>
  <%= f.label :name, class: "name" %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "50x12" %>

  <%= f.label :completion_date %>
  <%= f.date_field :completion_date %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit "Add Task" %>

<% end %>
