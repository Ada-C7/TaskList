<h1>Add New Task</h1>

<form action="/tasks" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">


  <label for="name">Name</label>
  <input type="text" name="name" value="" id="name">

  <label for="description">Description</label>
  <input type="text" name="description" value="" id="description">

  <label for="completion_date">Complete by </label>
  <input type="date" name="completion_date" value="" id="completion_date">

  <label for="completed">Completed</label>
  <input type="boolean" name="completed" value="" id="completed">

  <input type="submit" value="Add Task">
</form>
