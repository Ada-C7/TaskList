<h1>Add a New Task</h1>
<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :due_date %>
  <%= f.date_field :due_date %>

  <%= f.label :priority %>
  <%= f.select :priority, [['High', 1], ['Medium', 2], ['Low', 3]] %>

  <!-- options_for_select([['High', 1], ['Medium', 2], ['Low', 3]]) -->
  <!-- default name on submit button is "Create + Name of model -->
  <%= f.submit "add book"%>

<% end %>
