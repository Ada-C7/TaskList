<section class="task_list">

  <h1>Tasks for today:</h1>

  <ul>
    <% @tasks.each do |task| %>

    <li>
      <p>Task: <%= link_to task.name, task_path(task)%></p>
      <p>Description: <%=task.description%> </p>
      <% if task.completed_at.nil? %>
      <%=button_to "Mark complete", complete_task_path(task), method: :patch, data:  {confirm: "Are you sure you really finished the task?"}%>
      <% else %>
      Completed at: <%= task.completed_at%>
      <% end %>
    </br>
  </br>

  <%=button_to "Modify this task", edit_task_path(task), method: :get %>


  <%=button_to "Delete this task", task_path(task), method: :delete, data:  {confirm: "Are you sure you want to delete this task?"} %>


</li>
<% end%>
</ul>

<%= link_to "Create a new task", new_task_path %>

</section>
