

<header>
  <h1>Tasks for this week</h1>
</header>

<section class="task_list">
  <ul>
    <% @tasks.each do |task| %>
      <li class="task">
        <%= link_to task.name, task_path(task.id), class: "task_name" %>

        <% if task.date_complete %>
          <span class="task_complete">🎏</span>
        <% else %>
          <%= link_to "◻", complete_task_path(task.id), class: "task_complete", method: :patch %>
        <% end %>

        <%= link_to "✖", delete_task_path(task.id),
        data: {confirm: "Delete this task?"},
        method: :delete,
        class: "task_delete"%>

        <span class="date_complete"><%= task.date_complete %></span>
      </li>

    <% end %>
  </ul>
</section>

<footer class="task_list_footer">
  <p>
    <%= link_to "[add a new task]", new_task_path %>
  </p>
</footer>
