<h1> Welcome to Task List App </h1>
<p id = "add_task"> <%= link_to "Add new task", new_task_path %> </p>
<ul>
  <%@tasks.each do |task| %>
  <div>
    <p><%= link_to task[:name], task_path(task.id) %> </p>
    <li>Description: <%=task[:description]%></li>
    <li>Location: <%=task[:location]%></li>
    <%= button_to 'Delete', task_path(task), method: :delete, data: {confirm: 'Are you sure?' }, id: "delete_button"%>
    <%if task[:completed_at] == nil%>
    <%= button_to 'Complete task', complete_task_path(task), method: :patch,  id: "uncompleted_button" %>
    <%else%>
      <%= button_to 'Task is completed', complete_task_path(task), method: :patch,  id: "completed_button" %>
    <%end%>
  </div>
  <% end %>
</ul>
