

<main id = "index_main">

  <h1> Tasks list</h1>

  <nav>
    <ul>
      <% @tasks.each_with_index do |task| %>
        <li>
          <%= link_to task[:name], task_path(task.id) %>
          <%= ":    "%>
          <%= task[:description] %>
          <!-- Some sort of link to edit -->
          <!-- Some sort of a link to delete -->
          <%= link_to "Delete", task_path(task),
                data: {method: :delete, confirm: "Are you sure you want to delete the task #{task.name}"}%>
          <!-- <%###################= button_to "Delete", task_path(task), method: :delete%>  -->
          <!-- If the method is not specified the default is GET -->
        </li>
      <% end %>
    </ul>
  </nav>


  <!-- <%= link_to "Add new task", new_task_path %> -->

  <%= link_to image_tag("new_task_button.jpg", alt: "New task button", height: "100px"), new_task_path, id: "new_task_button" %>

  <!-- <%= image_tag 'ducks.jpg', alt: 'The canal ducks' , width: '75%' %>
  <%= link_to image_tag("crew.jpg", alt: "The crew", width: "75%"), "http://www.google.com" %> -->


</main>





