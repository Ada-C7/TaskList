<h1>Task List</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task[:name], task_path(task.id) %> <%= link_to "Delete", task_path(task),
    data: {method: :delete, confirm: "Are you sure you want to delete the #{task.name}?"} %>
    <%= link_to "Done", done_task_path(task), data: {method: :patch} %></li>

  <% end %>
</ul>

<%= link_to "Add Task to List", new_task_path %>
