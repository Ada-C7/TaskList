<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<ol>
  <h1>My To-do List:</h1>
  <% @tasks.each do |task| %>
  <li>
    <%= link_to task.name, task_path(task.id) %>: <%= task.description %> |
    Completed: <% if task.completion_date == nil %>
    NO
    <% else %>
    YES: <%= task.completion_date.strftime("%m-%d-%Y") %>
    <% end %>
  </li>
  <% end %>
</ol>
