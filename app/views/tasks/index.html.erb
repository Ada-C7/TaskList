<body>
  <header>
  </header>
  <main>

    <ol>
      <h1>My To-do List:</h1>
      <% @tasks.each do |task| %>
      <li class="list-items">
        <%= link_to task.name, task_path(task.id) %>: <%= task.description %> |
        Completed: <% if task.completion_date == nil %>
        NO
        <% else %>
        YES: <%= task.completion_date.strftime("%m-%d-%y") %>
        <% end %>
      </li>
      <% end %>
    </ol>

    <%= link_to "Add a new task", tasks_new_path, class: "add-button" %>
  </main>
  <footer>
  </footer>

</body>
</html>
