<h1>Brenna's To Do List:</h1>
<ul>
  <% Task.all.each do |task| %>
  <li>
    <h3><%= link_to task.name.upcase, task_path(task.id) %></h3>
    <p>
      <!-- <%= task.desc %>
    </p> -->
    <p class="comp">
      <% if task.complete != nil %>
        Completed on: <%= task.complete.strftime("%b %d, %Y") %> at <%= task.complete.strftime("%I:%M %p") %>
        <% end %>
    </p>
    <p class="incomp">
      <% if task.complete == nil %>
      Not done yet! Get on it!
      <% end %>
    </p>
  </li>
  <% end %>
</ul>


<img src="http://icons.veryicon.com/png/System/Kameleon/Checklist.png" alt="checklist icon"  />
