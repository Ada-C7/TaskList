<h1>ALL TASKS</h1>


<% @tasks.each do |task| %>
<ul id="all-one-line">

  <li>
    <%= link_to task.title, task_path(task.id) %>
    <%= button_to "delete", task_delete_path(task.id), method: :delete %>
    <%= button_to "edit", task_edit_path(task.id), method: :get %>

  </li>

</ul>

<% end %>

<%= button_to "+", tasks_new_path, method: :get %>
