<ul>
  <% Task.all.each do |task| %>
  <li>
    <h3><%= link_to task.name.upcase, task_path(task.id) %></h3>
    <p>

    <%= render partial: "complete", locals: { task_var: task } %>

    <%= form_for task, url: complete_task_path(task.id), method: :patch do |f| %>
      <p>
        <%= f.submit "Complete?" %>
      </p>
    <% end %>

  </li>
  <% end %>
</ul>

<h1 id="newtask"><%= link_to "New Task", new_task_path %></h1>
