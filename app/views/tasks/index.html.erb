<h1>Tasks List</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task.id) %>
      <%= link_to "Delete", task_path(task), data: {method: :delete, confirm: "Are you sure you want to delete this task: #{task.name}?"} %>
      <%= button_to "Completed", completed_task_path(task), method: :patch %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
