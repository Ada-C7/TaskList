  <section id="list">
    <h1>Task List</h1>

    <ul>
      <% @tasks.each do |task| %>
      <li>
        <%= link_to task.what, task_path(task.id) %>
        <p id="delete"><%= link_to "Delete", task_path(task), data:{method: :delete, confirm:"Are you sure you want to delete task?"} %></p>
        <% if task.completed_on %>
          <p id="completed">Completed on <%= task.completed_on %></p>
        <% else %>
          <p id="complete"><%= link_to "Complete", complete_task_path(task), method: :patch %></p>
        <% end %>
      </li>
      <% end %>
    </ul>

    <p id="new_task"><%= link_to "Add a new task", new_task_path %></p>

  </section>
