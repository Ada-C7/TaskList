<h1>My To-do List:</h1>
<ol>
  <% @tasks.each do |task| %>
  <li class="list-items">
    <% if task.complete == true %>
      <%= link_to task.name, task_path(task.id), class: "complete" %>
    <% else %>
      <%= link_to task.name, task_path(task.id), class: "incomplete" %>
    <% end %>
    <p>
     <%= task.description %>
   | Completed:

   <label for="complete">Completed?</label>
   <input type="checkbox" name="complete" value="" class="complete" />

   <% if task.completion_date == nil %>
    NO
    <% else %>
    YES: <%= task.completion_date.strftime("%m-%d-%y") %>
    <% end %>
       </p>


    <!-- completion date: <%= task.completion_date %>
    complete: <%= task.complete %>
    updated at: <%= task.updated_at %> -->


  </li>
  <% end %>
</ol>

<%= link_to "Add a new task", new_task_path, class: "add-button" %>
