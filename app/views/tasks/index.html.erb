<h1>Tasks#index</h1>

<article class="main-list">

  <h2>Get it Done!</h2>
  <ul>
    <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task.id) %> : <%= task.description %>
    </li>
    <% end %>
  </ul>

</article>

<%= link_to "Create New Task", new_task_path, class: "bottom-button" %>
