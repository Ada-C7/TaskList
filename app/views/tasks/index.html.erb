<%= stylesheet_link_tag "styles" %>
<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task|%>
    <li>
      <%= link_to task.name, task_path(task.id) %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to "Delete", task_path(task), data: { method: :delete, confirm: "Are you sure you want to delete #{task.name}?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
