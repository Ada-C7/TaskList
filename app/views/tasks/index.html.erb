  <section id="list">
    <h1>Task List</h1>

    <ul>
      <% @tasks.each do |task| %>
      <li>
        <%= link_to task.what, task_path(task.id) %>
        <%= link_to "Delete", task_path(task), data:{method: :delete, confirm:"Are you sure you want to delete task?"} %>
        <% if task.completed_on %>
          <%= task.completed_on %>
        <% else %>
          <%= link_to "Task complete", complete_task_path(task), method: :patch %>
        <% end %>
      </li>
      <% end %>
    </ul>

    <p id="new_task"><%= link_to "Add a new task", new_task_path %></p>

  </section>
