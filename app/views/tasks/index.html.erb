
<p id = "add_task"> <%= link_to "Add new task", new_task_path %> </p>
<h2>List of all tasks:</h2>
<ul>
  <%@tasks.each do |task| %>
      <div>
        <p><%= link_to task[:name], task_path(task.id) %> </p>
        <li>Description: <%=task[:description]%></li>
        <li>Time: <%=task[:completed_at]%></li>
        <li>Location: <%=task[:location]%></li>
    </div>
  <% end %>

</ul>
