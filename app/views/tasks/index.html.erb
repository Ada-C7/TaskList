<%= render partial: "header", locals: {zone: @zone} %>

<body>
  <section class="list">

    <% @tasks.each do |task| %>
      <ul class="main-nav">
        <li>
          <%= link_to task.title, task_path(task.id) %>
        </li>
        <li class="hidden">
          <%= button_to "delete", task_delete_path(task.id), method: :delete %>
        </li>
        <li class="hidden">
          <%= button_to "edit", task_edit_path(task.id), method: :get %>
        </li>
      </ul>
    <% end %>
    <%= button_to "add task", tasks_new_path, method: :get %>

  </section>

</body>

<%= render partial: "footer", locals: {zone: @zone} %>
