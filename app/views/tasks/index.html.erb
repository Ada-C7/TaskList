<h1>Tasks</h1>

<ul>
  <% @tasks.each_with_index do |task, index| %>
  <li>
    <%= link_to task.name, task_path(task.id) %>
    <%= button_to "Edit", edit_task_path(task) %>
    <%= button_to "Completed", completed_task_path(task), data: {confirm: "Do you want to mark this task as completed?"} %>
    <%= button_to "Delete", task_path(task),  method: :delete,
    data: {confirm: "Are you sure you want to delete task: #{task.name}?" }%>
  </li>

  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
