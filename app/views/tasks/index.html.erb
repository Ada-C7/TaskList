<section class="container">
  <%= render partial: "header", locals: {zone: @zone} %>

  <article class="body">
    <section id="list">

      <% @tasks.each do |task| %>

        <ul class="main-nav">
          <li class="task-title">
            <div class="<%= 'task-done' if task.completed != nil %>">
            
            <%= link_to task.title, task_path(task.id) %>
          </li>
          <li class="hidden">
            <%= button_to "delete", task_delete_path(task.id), method: :delete %>
          </li>
          <li class="hidden">
            <%= button_to "edit", task_edit_path(task.id), method: :get %>
          </li>
          <li class="hidden">
            <%= button_to "done", complete_task_path(task.id), method: :put %>
          </li>
        </ul>
      <% end %>



    </section>
    <ul id="add_task">
      <li>
        <%= button_to "add task", tasks_new_path, method: :get %>
      </li>
    </ul>

  </article>

  <%= render partial: "footer", locals: {zone: @zone} %>
</section>
