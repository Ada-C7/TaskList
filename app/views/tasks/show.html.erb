<section id="details">
  <h1><%= @task.name %></h1>
  <h3>Details: <%= @task.description.empty? ? "none" : @task.description%></h3>
  <h4 class="completed">
    <%= @task.completed_at.nil? ? "" : "Completed: #{@task.completed_at}" %>
  </h4>
</section>

<aside>
<%= button_to "â†", tasks_path, method: :get, class: "buttons" %>
<%= button_to "Edit", edit_task_path(@task.id), method: :get, class: "buttons" %>
<%= button_to "Delete", task_path(@task.id), method: :delete, class: "buttons",
      data: {confirm: "Are you sure you want to delete task #{@task.name}?"} %>
</aside>
