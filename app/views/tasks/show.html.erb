<section id="task-details">
  <h2><%= @show_task[:name].capitalize %></h2>
  <section class="details-field">
    <h4>Description</h4>
    <p><%= @show_task[:description] %></p>
  </section>
  <section class="details-field">
    <h4>Completion Date</h4>
    <p><%= @show_task[:completion_date] %></p>
  </section>
  <section class="details-field">
    <h4>Status</h4>
    <% if @show_task[:complete] %>
      <p>Complete</p>
      <p class="comment-to-user">YAY! Great Job!</p>
    <% else %>
      <p>Incomplete</p>
      <p class="comment-to-user">Better get on this quick!</p>
    <% end %>
  </section>
</section>
