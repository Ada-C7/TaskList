
<section id = "show_section">
  <h1><%= @task[:name]%></h1>
  <p>
    Description: <%= @task[:description] %>
  </p>
  <p>
    Completed date: <%= @task[:completion_date] %>
  </p>

    <%= link_to image_tag("back1.png", alt: "Back to list button", height: "40px"), tasks_path %>
    <%= link_to image_tag("edit1.png", alt: "Edit button", height: "40px"), edit_task_path %>
    <%= link_to image_tag("delete1.png", alt: "Delete button", height: "40px"), task_path,
        data: {method: :delete, confirm: "Are you sure you want to delete this task?"}%>
</section>
