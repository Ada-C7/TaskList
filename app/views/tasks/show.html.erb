<body class="show">
  <h2><%= @task[:what] %></h2>
  <h3>Due: <%= @task[:when] %></h3>
  <h3>Description: <%= @task[:description] %></h3>

  <%= link_to "Back to task list", tasks_path %>
  <%= link_to "Edit task", edit_task_path %>
  <%= link_to "Delete", task_path(@task), data:{method: :delete, confirm:"Are you sure you want to delete task?"} %>
  <% if @task.completed_on %>
    <p>Completed on <%= @task.completed_on %></p>
  <% else %>
    <%= link_to "Complete", complete_task_path(@task), method: :patch %>
  <% end %>
</body>
