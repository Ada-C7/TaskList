<h1>Specific Task</h1>

<p> Task: <%= @task.description %></p>
<p> Notes: <%= @task.notes %></p>
<p> Status: <%= @task.status ? "Complete" : "Open" %></p>
<% if @task.status == true %>
     <p> Date Completed: <%= @task.completed_at %> </p>
<% end %>
<p>
     <%= link_to 'Edit Task', edit_task_path %>
     <%= link_to 'Delete Task', delete_task_path,
          data: { confirm: "Are you confident you'd like to delete this task?" },
          method: :delete
     %>
</p>
<p>
     <%= link_to "Add New Task", new_task_path %>
     <%= link_to "Return To All Tasks", tasks_path %>
</p>
