<body>
  <h2> <%= @task[:name] %></h2>
  <h4> Description: <%= @task[:description] %></h4>
  <h4> Completed at: <%= @task[:completed_by] %></h4>
  <%= button_to "Edit", edit_task_path(@task), method: :get %>
  <%= button_to "Delete", task_path(@task), method: :delete, data: {confirm: "Are you sure you want to delete #{@task.name}?"} %>
</body>

<footer>
  <ul>
    <li><%= link_to "Back to All Tasks", tasks_path %></li>
    <li><%= link_to "Return Home", welcome_path %></li>
  </ul>
</footer>
