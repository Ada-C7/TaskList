<h1><%= @task.name %> <%= link_to image_tag('pencil-icon'), task_edit_path(@task.id), method: :get %></h1>

<table>
  <tr>
    <td><strong>Description</strong></td>
    <td>
      <% if @task.description.empty? %>
        N/A
      <% else %>
        <%= @task.description %>
      <% end %>
    </td>
  </tr>
  
  <tr>
    <td><strong>Status</strong></td>
    <td>
      <% if @task.completion_date.nil? %>
        Incomplete
      <% else %>
        Completed on <%= @task.completion_date.strftime("%A, %B %d") %>
      <% end %>
    </td>
  </tr>
</table>

<%= link_to "<<", tasks_path %>
