<h2><%= @task[:name] %></h2>
<h3>Description: <%= @task[:description] %></h3>
<h3><%= @task[:completion_date] %></h3>

<%= link_to "Back to task list", tasks_path %>
<%= button_to "Edit task", edit_task_path, method: :get %>
<%= button_to "Mark Complete", complete_task_path, method: :patch %>
<%= button_to "Delete", task_path, method: :delete,
  data: { confirm: "Are you sure you want to delete #{@task[:name]} task?" } %>
