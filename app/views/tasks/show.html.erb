<h1>
  <%= @this_task.id %>. <%= @this_task.name %>
</h1>
<p class="desc">
  <%= @this_task.desc %>
</p>

<p class="comp">
  <% if @this_task.complete != nil %>
    Completed on: <%= @this_task.complete.strftime("%b %d, %Y") %> at <%= @this_task.complete.strftime("%I:%M %p") %>
    <% end %>
</p>
<p class="incomp">
  <% if @this_task.complete == nil %>
  Not done yet! Get on it!
  <% end %>
</p>

<h4>
  <%= link_to "Edit Task", edit_task_path %>
</h4>

<h2>
  <%= link_to "Delete Task", delete_task_path,
  data: { confirm: "Are you sure you want to delete this task?" },
  method: :delete %>
</h2>

<%= link_to tasks_path do %>
  <%= image_tag "checklist.png", alt: "checklist" %>
<% end %>
