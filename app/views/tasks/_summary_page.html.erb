<li><%= link_to task.name, task_path(task.id), class: task.completion_date.nil? ? "" : "completed" %>
  <%= link_to "Edit?", edit_task_path(task) %>
  <%= link_to "Delete?", task_path(task), data: {method: :delete, confirm: "Are you sure you want to delete #{task.name}"} %>
  <%= link_to "Completed?", completed_task_path(task), method: :patch %>
</li>
