<p class="comp">
  <% if task_var.complete %>
    Completed on: <%= task_var.completed_on.strftime("%b %d, %Y") %> at <%= task_var.completed_on.strftime("%I:%M %p") %>
    <% end %>
</p>
<p class="incomp">
  <% if !task_var.complete %>
  Not done yet! Get on it!

    <%= form_for task_var, url: complete_task_path(task_var.id), method: :patch do |f| %>
      <p>
        <%= f.submit "Complete?" %>
      </p>
    <% end %>
  <% end %>
</p>
