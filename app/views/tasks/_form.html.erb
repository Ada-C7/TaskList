<%= form_for @task, form_method: :put do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description, size: "60x12" %>

<%= f.label :complete, "completed?", class: "check" %>
<%= f.check_box :complete %>

<!-- <%= f.label :completion_date, "Date Complete:" %>
<%= f.date_field :completion_date %> -->

<%= f.submit action_name, class: form_class %>

<% end %>
