<section id = "form_for_new_and_edit">
  <%= form_for @task do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
  <%= link_to "Back to tasks", tasks_path %>
</section>
