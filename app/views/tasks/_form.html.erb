<section>
  <%= form_for @task do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.submit value: "#{submit_text} Task" %>
  <% end %>
</section>
