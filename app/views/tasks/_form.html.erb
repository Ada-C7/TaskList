<%= form_for @task, method: form_method do |f| %>
<h2>
    <%= f.label :name, 'Task Name', class:"label" %>
    <%= f. text_field :name, class:"text_field" %>
</h2>

<h2>
    <%= f.label :description, class:"label" %>
    <%= f.text_area :description, size: '60x12', class:"text_field"%>
</h2>

    <%= f.submit action_name, id:"submit_button"%>
<% end %>
