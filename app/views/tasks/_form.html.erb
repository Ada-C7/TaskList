<%= form_for @task do |f| %>

  <ul>
    <li>
      <%= f.label :title %>:
      <%= f.text_field :title %>
    </li>

    <li>
      <%= f.label :description %>:
      <%= f.text_area :description, width: "auto" %>
    </li>

    <li>
      <%= f.label :duedate %>:
      <%= f.text_field :duedate %>
    </li>

    <li>
      <%= f.label :priority %>:
      <%= f.text_field :priority %>
    </li>

    <li>
      <%= f.label "done?"  %>
      <%= f.check_box(:completed)  %>
    </li>

    <li>
      <%= f.submit "save" %>
    </li>
  </ul>

<% end %>
