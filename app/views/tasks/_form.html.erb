<%= form_for @task, method: form_method do |f| %>
<div class = "name">
<%= f.label :name %>
<%= f.text_field :name %></div>

<div class="description">
<%= f.label :description %>
<%= f.text_area :description, size: "50x10" %></div>

<div class="completion_date">
<%= f.label :completion_date %>
<%= f.date_field :completion_date%></div>

<div class="add-button">
<%= f.submit action_name %></div>
<% end%>
